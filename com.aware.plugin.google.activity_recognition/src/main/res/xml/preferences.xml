<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="com.aware.plugin.activityrecognition"
    android:title="Google Activity Recognition" >

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="status_plugin_google_activity_recognition"
        android:persistent="true"
        android:summary="Detects: still, on foot, in vehicle, on bicycle"
        android:title="Active" />

    <EditTextPreference
        android:defaultValue="60"
        android:key="frequency_plugin_google_activity_recognition"
        android:persistent="true"
        android:summary="60 seconds"
        android:title="How frequently to detect (in seconds)"
        android:inputType="numberDecimal" />

</PreferenceScreen>